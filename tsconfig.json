{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/*"],
      "@server/*": ["server/*"]
    }
  },
  "include": ["client/**/*", "server/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
